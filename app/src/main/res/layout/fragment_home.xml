<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.codemo.www.wifiseeker.HomeFragment"
    android:id="@+id/home_fragment"
    android:elevation="1dp"
    android:orientation="vertical"
    android:layout_marginBottom="68dp"
    android:nestedScrollingEnabled="true"
    android:isScrollContainer="true">

    <!-- TODO: Update blank fragment layout -->


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">

            <android.support.v7.widget.CardView
                    android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                    android:background="@color/cardview_shadow_start_color"
                    app:cardBackgroundColor="@color/cast_expanded_controller_ad_container_white_stripe_color"
                    android:elevation="1dp"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/detailCard"
                android:layout_width="match_parent"
                android:layout_weight="1.13"
                android:layout_height="300dp">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/wifiDetailText"
                        android:textSize="8sp"
                        android:id="@+id/wifiDetailText"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:layout_above="@+id/cardView"
                        android:gravity="left"
                        android:layout_gravity="left" />

                    <TextView
                        android:text="Wifi List Loading...."
                        android:layout_width="183dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/wifiListed"
                        android:textSize="8sp"
                        android:layout_gravity="right|end"
                        android:layout_alignParentTop="true"
                        android:gravity="right|end" />

                    <Button
                        android:text="@string/wifiDetailBtn"
                        android:layout_width="211dp"
                        android:layout_height="31dp"
                        android:id="@+id/wifiDetailBtn"
                        android:requiresFadingEdge="horizontal|vertical"
                        android:layout_marginBottom="10dp"
                        android:layout_above="@+id/wifiList"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="bottom|center_horizontal"
                        android:background="?attr/actionModeSplitBackground" />

                <TextView
                    android:text="1 2 3 4 5 6 7 8 9 0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView7"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_marginLeft="70dp"
                    android:textSize="18sp" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:background="@color/cardview_shadow_start_color"
                app:cardBackgroundColor="@color/cast_expanded_controller_ad_container_white_stripe_color"
                android:layout_margin="10dp"
                android:id="@+id/fefaultCard"
                android:elevation="1dp"
                android:layout_height="148dp" >

                <ImageView
                    android:layout_width="148dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@mipmap/ic_splash3"
                    android:id="@+id/imageView"
                    android:layout_margin="5dp" />

                <TextView
                    android:text="Wi-Fi networks "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView3"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_marginLeft="70dp"
                    android:textSize="18sp" />

                <TextView
                    android:text=".."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/wifiNo"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_marginLeft="70dp"
                    android:textSize="18sp"
                    android:layout_marginBottom="25dp" />

                <TextView
                    android:text="available"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView6"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_marginLeft="70dp"
                    android:textSize="18sp"
                    android:layout_marginTop="25dp" />
            </android.support.v7.widget.CardView>

            <ListView
                    android:layout_width="match_parent"
                    android:id="@+id/wifiList"
                    android:scrollbarStyle="insideOverlay"
                    android:background="@color/cast_expanded_controller_ad_container_white_stripe_color"
                    android:layout_marginBottom="10dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_row="4"
                    android:layout_column="0"
                    android:elevation="1dp"
                android:layout_weight="1.20"
                android:layout_height="600dp" />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">

    </LinearLayout>


</LinearLayout>
