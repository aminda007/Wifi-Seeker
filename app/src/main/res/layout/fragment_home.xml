<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.codemo.www.wifiseeker.view.HomeFragment"
    android:id="@+id/home_fragment"
    android:elevation="1dp"
    android:orientation="vertical"
    android:layout_marginBottom="68dp"
    android:nestedScrollingEnabled="true"
    android:isScrollContainer="true"
    android:weightSum="1">

    <!-- TODO: Update blank fragment layout -->


    <!--android:background="cast_expanded_controller_ad_container_white_stripe_color" -->

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:background="@color/cardview_shadow_start_color"
        app:cardBackgroundColor="@color/cast_expanded_controller_ad_container_white_stripe_color"
        android:layout_margin="10dp"
        android:id="@+id/fefaultCard"
        android:elevation="1dp"
        android:layout_height="75dp"
        android:layout_weight="0.60">

        <ImageView
            android:layout_width="148dp"
            android:layout_height="match_parent"
            app:srcCompat="@mipmap/ic_splash3"
            android:id="@+id/imageView"
            android:layout_margin="5dp" />

        <TextView
            android:text="Wi-Fi networks... "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textNetworks"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginLeft="70dp"
            android:textSize="18sp" />

        <TextView
            android:text="Scanning for"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/wifiNo"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginLeft="70dp"
            android:textSize="18sp"
            android:layout_marginBottom="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textAvailable"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginLeft="70dp"
            android:textSize="18sp"
            android:layout_marginTop="25dp" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        app:cardBackgroundColor="@color/cast_expanded_controller_ad_container_white_stripe_color"
        android:paddingTop="0dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_height="41dp">

        <Button
            android:text="@string/wifiScanBtn"
            android:layout_width="138dp"
            android:layout_height="31dp"
            android:id="@+id/WifiScanBtn"
            android:requiresFadingEdge="horizontal|vertical"
            android:layout_above="@+id/wifiList"
            android:layout_centerHorizontal="true"
            android:layout_gravity="bottom|right"
            android:background="?attr/actionModeSplitBackground"
            android:paddingTop="0dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="30dp" />

        <Button
            android:text="Find Wi-Fi"
            android:layout_width="138dp"
            android:layout_height="31dp"
            android:id="@+id/WifiFindBtn"
            android:requiresFadingEdge="horizontal|vertical"
            android:layout_above="@+id/wifiList"
            android:layout_centerHorizontal="true"
            android:layout_gravity="bottom|left"
            android:background="?attr/actionModeSplitBackground"
            android:paddingTop="0dp"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="5dp" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <TextView
            android:text="Open"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:textSize="18sp"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="3dp"
            android:textStyle="bold" />

    </android.support.v7.widget.CardView>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="121dp"
        android:id="@+id/wifiOpenList"
        android:background="@color/cast_expanded_controller_ad_container_white_stripe_color"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="0.14" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <TextView
            android:text="Secured"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:textSize="18sp"
            android:textColor="#f42f2f"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="3dp"
            android:textStyle="bold" />
    </android.support.v7.widget.CardView>

    <ListView
            android:layout_width="match_parent"
            android:id="@+id/wifiList"
            android:scrollbarStyle="insideOverlay"
            android:background="@color/cast_expanded_controller_ad_container_white_stripe_color"
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_row="4"
            android:layout_column="0"
            android:elevation="1dp"
        android:layout_height="108dp"
        android:layout_weight="0.20" />


</LinearLayout>
