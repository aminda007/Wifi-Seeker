<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:text="Wifi-Seeker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/welcome"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView"
        android:layout_marginTop="50dp"
        android:textSize="30sp"
        android:textColor="@android:color/holo_blue_bright"
        android:fontFamily="@string/common_google_play_services_install_button" />

    <TextView
        android:text="CODEMO productions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:textColor="@color/cast_expanded_controller_text_color" />

    <ImageView

        android:id="@+id/welcome"
        app:srcCompat="@mipmap/ic_splash3"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_width="100dp"
        android:layout_height="100dp" />
</RelativeLayout>